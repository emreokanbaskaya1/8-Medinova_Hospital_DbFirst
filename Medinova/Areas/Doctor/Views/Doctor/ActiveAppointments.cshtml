@model IEnumerable<Medinova.Models.Appointment>
@{
    ViewBag.Title = "Active Appointments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h3 class="page-title">Active Appointments</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Doctor Panel</a></li>
                    <li class="breadcrumb-item active">Active Appointments</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Active Appointment List</h5>
                    <div>
                        <a href="@Url.Action("AllAppointments")" class="btn btn-sm btn-secondary me-2">
                            <i class="feather-list me-1"></i> All Appointments
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-sm btn-primary">
                            <i class="feather-home me-1"></i> Dashboard
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped" id="appointmentsTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Patient Name</th>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AppointmentId</td>
                                            <td><strong>@item.FullName</strong></td>
                                            <td>
                                                @if (item.AppointmentDate.HasValue)
                                                {
                                                    @item.AppointmentDate.Value.ToString("dd.MM.yyyy")
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@item.AppointmentTime</span>
                                            </td>
                                            <td>@(item.PhoneNumber ?? "-")</td>
                                            <td>@(item.Email ?? "-")</td>
                                            <td>
                                                <span class="badge bg-success">Active</span>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-danger" onclick="cancelAppointment(@item.AppointmentId)">
                                                    <i class="feather-x-circle"></i> Cancel
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="feather-info me-2"></i>
                            You have no active appointments.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function cancelAppointment(appointmentId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to cancel this appointment?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, Cancel It!',
                cancelButtonText: 'No, Go Back'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("CancelAppointment", "Doctor", new { area = "Doctor" })',
                        type: 'POST',
                        data: { appointmentId: appointmentId },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    title: 'Success!',
                                    text: response.message,
                                    icon: 'success'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('Error!', response.message, 'error');
                            }
                        },
                        error: function() {
                            Swal.fire('Error!', 'An error occurred.', 'error');
                        }
                    });
                }
            });
        }
    </script>
}
