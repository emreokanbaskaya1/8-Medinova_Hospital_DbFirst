@model IEnumerable<Medinova.Models.Appointment>
@{
    ViewBag.Title = "Cancelled Appointments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h3 class="page-title">Cancelled Appointments</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Patient Panel</a></li>
                    <li class="breadcrumb-item active">Cancelled Appointments</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Cancelled Appointment List</h5>
                    <div>
                        <a href="@Url.Action("CreateAppointment")" class="btn btn-sm btn-primary me-2">
                            <i class="feather-plus me-1"></i> New Appointment
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-sm btn-secondary">
                            <i class="feather-home me-1"></i> Dashboard
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Doctor</th>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="table-danger">
                                            <td>@item.AppointmentId</td>
                                            <td>
                                                @if (item.Doctor != null)
                                                {
                                                    <strong>Dr. @item.Doctor.FullName</strong>
                                                    if (item.Doctor.Department != null)
                                                    {
                                                        <br /><small class="text-muted">@item.Doctor.Department.Name</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.AppointmentDate.HasValue)
                                                {
                                                    @item.AppointmentDate.Value.ToString("dd MMMM yyyy, dddd")
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary fs-6" style="text-decoration: line-through;">@item.AppointmentTime</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-danger">Cancelled</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <i class="feather-check-circle me-2"></i>
                            You have no cancelled appointments. Great!
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
