@model Medinova.Models.User
@{
    ViewBag.Title = "User Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">
                    <i class="feather-user me-2"></i>User Details
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="avatar-text avatar-xxl bg-soft-primary text-primary rounded-circle mx-auto mb-3">
                        <i class="feather-user" style="font-size: 48px;"></i>
                    </div>
                    <h4>@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">@("@")@Model.UserName</p>
                    @if (Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                            var roleClass = role.RoleName == "Admin" ? "bg-danger" :
                                           role.RoleName == "Doctor" ? "bg-primary" :
                                           role.RoleName == "Patient" ? "bg-success" : "bg-secondary";
                            <span class="badge @roleClass fs-12 px-3 py-2">@role.RoleName</span>
                        }
                    }
                    else
                    {
                        <span class="badge bg-secondary fs-12 px-3 py-2">No Role Assigned</span>
                    }
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">User ID</label>
                        <p class="mb-0 fw-bold">@Model.UserId</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">Username</label>
                        <p class="mb-0 fw-bold"><code>@Model.UserName</code></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">First Name</label>
                        <p class="mb-0 fw-bold">@Model.FirstName</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small">Last Name</label>
                        <p class="mb-0 fw-bold">@Model.LastName</p>
                    </div>
                </div>

                @if (Model.Doctor != null)
                {
                    <hr />
                    <h6 class="fw-bold mb-3">
                        <i class="feather-activity me-2"></i>Doctor Profile
                    </h6>
                    <div class="alert alert-primary">
                        <div class="row align-items-center">
                            <div class="col-md-2 text-center">
                                @if (!string.IsNullOrEmpty(Model.Doctor.ImageUrl))
                                {
                                    <img src="@Model.Doctor.ImageUrl" alt="@Model.Doctor.FullName" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="avatar-text avatar-xl bg-primary text-white rounded-circle mx-auto">
                                        <i class="feather-user fs-3"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-md-10">
                                <h5 class="mb-2">@Model.Doctor.FullName</h5>
                                <p class="mb-1">
                                    <strong>Doctor ID:</strong> <span class="badge bg-secondary">@Model.Doctor.DoctorId</span>
                                </p>
                                @if (Model.Doctor.Department != null)
                                {
                                    <p class="mb-1">
                                        <strong>Department:</strong> 
                                        <span class="badge bg-info">@Model.Doctor.Department.Name</span>
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Doctor.Description))
                                {
                                    <p class="mb-0 small text-muted mt-2">
                                        <i class="feather-file-text me-1"></i>@Model.Doctor.Description
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                }
                else if (Model.Roles.Any(r => r.RoleName == "Doctor"))
                {
                    <hr />
                    <div class="alert alert-warning">
                        <i class="feather-alert-triangle me-2"></i>
                        <strong>Warning:</strong> This user has the Doctor role but no doctor profile is assigned!
                        <a href="@Url.Action("AssignRole", "AdminUser", new { area = "Admin", id = Model.UserId })" class="alert-link">Assign doctor profile now</a>
                    </div>
                }

                <hr />

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", "AdminUser", new { area = "Admin" })" class="btn btn-secondary">
                        <i class="feather-arrow-left me-1"></i> Back to List
                    </a>
                    <a href="@Url.Action("AssignRole", "AdminUser", new { area = "Admin", id = Model.UserId })" class="btn btn-primary">
                        <i class="feather-shield me-1"></i> Assign Roles
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
