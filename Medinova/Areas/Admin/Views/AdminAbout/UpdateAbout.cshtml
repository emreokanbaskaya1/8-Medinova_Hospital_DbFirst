@model Medinova.Models.About

@{
    ViewBag.Title = "About Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">About Güncelle</h4>
                    <a href="/Admin/AdminAbout/Index" class="btn btn-secondary float-right">
                        <i class="fa fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
                <div class="card-body">
                    <form action="/Admin/AdminAbout/UpdateAbout" method="post">
                        <input type="hidden" name="AboutId" value="@Model.AboutId" />
                        <div class="form-group">
                            <label>Baþlýk</label>
                            <input type="text" name="Title" value="@Model.Title" class="form-control" placeholder="Baþlýk giriniz" required />
                        </div>
                        <div class="form-group">
                            <label>Açýklama</label>
                            <textarea name="Description" class="form-control" rows="5" placeholder="Açýklama giriniz" required>@Model.Description</textarea>
                        </div>
                        <button type="submit" class="btn btn-warning">
                            <i class="fa fa-save"></i> Güncelle
                        </button>
                        <a href="/Admin/AdminAbout/Index" class="btn btn-secondary">
                            <i class="fa fa-times"></i> Ýptal
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
