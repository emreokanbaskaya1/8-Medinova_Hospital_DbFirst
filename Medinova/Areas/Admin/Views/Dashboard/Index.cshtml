@model IEnumerable<Medinova.Models.Appointment>
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- Statistics Cards -->
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-lg bg-soft-primary text-primary rounded">
                            <i class="feather-users fs-4"></i>
                        </div>
                        <div>
                            <span class="d-block">Total Doctors</span>
                            <span class="h4 d-block mb-0 fw-bold">@ViewBag.TotalDoctors</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-lg bg-soft-success text-success rounded">
                            <i class="feather-layers fs-4"></i>
                        </div>
                        <div>
                            <span class="d-block">Total Departments</span>
                            <span class="h4 d-block mb-0 fw-bold">@ViewBag.TotalDepartments</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-lg bg-soft-warning text-warning rounded">
                            <i class="feather-calendar fs-4"></i>
                        </div>
                        <div>
                            <span class="d-block">Total Appointments</span>
                            <span class="h4 d-block mb-0 fw-bold">@ViewBag.TotalAppointments</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-lg bg-soft-info text-info rounded">
                            <i class="feather-clock fs-4"></i>
                        </div>
                        <div>
                            <span class="d-block">Today's Appointments</span>
                            <span class="h4 d-block mb-0 fw-bold">@ViewBag.TodayAppointments</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Appointments -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Recent Appointments</h5>
                <a href="@Url.Action("Index", "AdminAppointment", new { area = "Admin" })" class="btn btn-sm btn-primary">
                    View All
                </a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Patient Name</th>
                                    <th>Doctor</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AppointmentId</td>
                                        <td>@item.FullName</td>
                                        <td>
                                            @if (item.Doctor != null)
                                            {
                                                <text>@item.Doctor.FullName</text>
                                            }
                                            else
                                            {
                                                <text>-</text>
                                            }
                                        </td>
                                        <td>
                                            @if (item.AppointmentDate.HasValue)
                                            {
                                                @item.AppointmentDate.Value.ToString("dd MMM yyyy")
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@item.AppointmentTime</span>
                                        </td>
                                        <td>
                                            @if (item.IsActive == true)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Cancelled</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="feather-info me-2"></i>
                        No appointments found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Links -->
<div class="row mt-4">
    <div class="col-md-3">
        <a href="@Url.Action("Index", "AdminDoctor", new { area = "Admin" })" class="card text-decoration-none">
            <div class="card-body text-center">
                <i class="feather-users fs-1 text-primary mb-3"></i>
                <h6>Manage Doctors</h6>
            </div>
        </a>
    </div>
    <div class="col-md-3">
        <a href="@Url.Action("Index", "AdminDepartment", new { area = "Admin" })" class="card text-decoration-none">
            <div class="card-body text-center">
                <i class="feather-layers fs-1 text-success mb-3"></i>
                <h6>Manage Departments</h6>
            </div>
        </a>
    </div>
    <div class="col-md-3">
        <a href="@Url.Action("Index", "AdminService", new { area = "Admin" })" class="card text-decoration-none">
            <div class="card-body text-center">
                <i class="feather-briefcase fs-1 text-warning mb-3"></i>
                <h6>Manage Services</h6>
            </div>
        </a>
    </div>
    <div class="col-md-3">
        <a href="@Url.Action("Index", "AdminPackage", new { area = "Admin" })" class="card text-decoration-none">
            <div class="card-body text-center">
                <i class="feather-package fs-1 text-info mb-3"></i>
                <h6>Manage Packages</h6>
            </div>
        </a>
    </div>
</div>
