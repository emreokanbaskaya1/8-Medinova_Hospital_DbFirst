@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Medinova Hospital">
    <title>Medinova || Registration Successful</title>
    
    <!--! BEGIN: Favicon-->
    <link rel="shortcut icon" type="image/x-icon" href="~/Templates/Duralux-admin-1.0.0/assets/images/favicon.ico">
    <!--! END: Favicon-->
    
    <!--! BEGIN: Bootstrap CSS-->
    <link rel="stylesheet" type="text/css" href="~/Templates/Duralux-admin-1.0.0/assets/css/bootstrap.min.css">
    <!--! END: Bootstrap CSS-->
    
    <!--! BEGIN: Vendors CSS-->
    <link rel="stylesheet" type="text/css" href="~/Templates/Duralux-admin-1.0.0/assets/vendors/css/vendors.min.css">
    <!--! END: Vendors CSS-->
    
    <!--! BEGIN: Custom CSS-->
    <link rel="stylesheet" type="text/css" href="~/Templates/Duralux-admin-1.0.0/assets/css/theme.min.css">
    <!--! END: Custom CSS-->
    
    <meta http-equiv="refresh" content="3;url=@Url.Action("Login", "Account")">
</head>

<body>
    <main class="auth-minimal-wrapper">
        <div class="auth-minimal-inner">
            <div class="minimal-card-wrapper">
                <div class="card mb-4 mt-5 mx-4 mx-sm-0 position-relative">
                    <div class="wd-50 bg-white p-2 rounded-circle shadow-lg position-absolute translate-middle top-0 start-50">
                        <img src="~/Templates/Duralux-admin-1.0.0/assets/images/logo-abbr.png" alt="Medinova Logo" class="img-fluid">
                    </div>
                    <div class="card-body p-sm-5 text-center">
                        <div class="mb-4 mt-3">
                            <div class="wd-100 ht-100 bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto">
                                <i class="feather-check-circle text-success" style="font-size: 60px;"></i>
                            </div>
                        </div>
                        
                        <h2 class="fs-20 fw-bolder mb-4 text-success">Registration Successful!</h2>
                        <h4 class="fs-13 fw-bold mb-2">Welcome</h4>
                        <p class="fs-12 fw-medium text-muted mb-4">
                            Your account has been successfully created. <br>
                            You will be redirected to the login page in <strong>3 seconds</strong>...
                        </p>
                        
                        <div class="mt-5">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-lg btn-success w-100">
                                <i class="feather-log-in me-2"></i> Login Now
                            </a>
                        </div>
                        
                        <div class="mt-3">
                            <a href="/" class="btn btn-light">
                                <i class="feather-home me-2"></i> Back to Homepage
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!--! BEGIN: Vendors JS !-->
    <script src="~/Templates/Duralux-admin-1.0.0/assets/vendors/js/vendors.min.js"></script>
    <!--! END: Vendors JS !-->
    
    <!--! BEGIN: Apps Init  !-->
    <script src="~/Templates/Duralux-admin-1.0.0/assets/js/common-init.min.js"></script>
    <!--! END: Apps Init !-->
</body>
</html>
