@model Medinova.Models.Banner

<div class="container-fluid py-5 mb-5 position-relative" style="min-height: 500px; overflow: hidden;">
    <!-- Background Image -->
    <img src="@Model.ImageUrl" alt="Hero Background"
         style="position: absolute; top: 0; right: 0; width: 100%; height: 100%; object-fit: cover; object-position: top right; z-index: 0;">

    <!-- Overlay -->
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(90deg, rgba(19,197,221,0.9) 0%, rgba(19,197,221,0.7) 50%, rgba(19,197,221,0.3) 100%); z-index: 1;"></div>

    <!-- Content -->
    <div class="container py-5 position-relative" style="z-index: 2;">
        <div class="row justify-content-start">
            <div class="col-lg-8 text-center text-lg-start">
                <h5 class="d-inline-block text-white text-uppercase border-bottom border-5"
                    style="border-color: rgba(255, 255, 255, .3) !important;">
                    @Model.Title
                </h5>
                <h1 class="display-1 text-white mb-md-4">@Model.Description</h1>
                <div class="pt-2">
                    <a href="#!" class="btn btn-light rounded-pill py-md-3 px-md-5 mx-2">Find Doctor</a>
                    <a href="#!" class="btn btn-outline-light rounded-pill py-md-3 px-md-5 mx-2">Appointment</a>
                </div>
            </div>
        </div>
    </div>
</div>
