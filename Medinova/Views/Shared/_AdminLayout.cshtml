<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Medinova Hospital Management System">
    <meta name="author" content="Medinova">

    <title>@ViewBag.Title - Medinova</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Templates/Duralux-admin-1.0.0/assets/images/favicon.ico">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="~/Templates/Duralux-admin-1.0.0/assets/css/bootstrap.min.css">

    <!-- Vendors CSS -->
    <link rel="stylesheet" type="text/css" href="~/Templates/Duralux-admin-1.0.0/assets/vendors/css/vendors.min.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/Duralux-admin-1.0.0/assets/vendors/css/daterangepicker.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="~/Templates/Duralux-admin-1.0.0/assets/css/theme.min.css">
</head>

<body>
    @{
        var userRole = Session["userRole"]?.ToString();
        var isDoctor = userRole == "Doctor";
        var isPatient = userRole == "Patient";
    }

    <!-- Navigation Menu -->
    <nav class="nxl-navigation">
        <div class="navbar-wrapper">
            <div class="m-header">
                <a href="@Url.Action("Index", "Default", new { area = "" })" class="b-brand">
                    <img src="~/Templates/Duralux-admin-1.0.0/assets/images/logo-full.png" alt="Medinova" class="logo logo-lg">
                    <img src="~/Templates/Duralux-admin-1.0.0/assets/images/logo-abbr.png" alt="M" class="logo logo-sm">
                </a>
            </div>
            <div class="navbar-content">
                <ul class="nxl-navbar">
                    <li class="nxl-item nxl-caption">
                        <label>Navigation</label>
                    </li>

                    @if (isDoctor)
                    {
                        <!-- Doctor Menu -->
                        <li class="nxl-item">
                            <a href="@Url.Action("Index", "Doctor", new { area = "Doctor" })" class="nxl-link">
                                <span class="nxl-micon"><i class="feather-home"></i></span>
                                <span class="nxl-mtext">Dashboard</span>
                            </a>
                        </li>

                        <li class="nxl-item nxl-caption">
                            <label>Appointments</label>
                        </li>

                        <li class="nxl-item">
                            <a href="@Url.Action("ActiveAppointments", "Doctor", new { area = "Doctor" })" class="nxl-link">
                                <span class="nxl-micon"><i class="feather-check-circle"></i></span>
                                <span class="nxl-mtext">Active Appointments</span>
                            </a>
                        </li>

                        <li class="nxl-item">
                            <a href="@Url.Action("AllAppointments", "Doctor", new { area = "Doctor" })" class="nxl-link">
                                <span class="nxl-micon"><i class="feather-list"></i></span>
                                <span class="nxl-mtext">All Appointments</span>
                            </a>
                        </li>
                    }

                    @if (isPatient)
                    {
                        <!-- Patient Menu -->
                        <li class="nxl-item">
                            <a href="@Url.Action("Index", "Patient", new { area = "Patient" })" class="nxl-link">
                                <span class="nxl-micon"><i class="feather-home"></i></span>
                                <span class="nxl-mtext">Dashboard</span>
                            </a>
                        </li>

                        <li class="nxl-item nxl-caption">
                            <label>Appointments</label>
                        </li>

                        <li class="nxl-item">
                            <a href="@Url.Action("CreateAppointment", "Patient", new { area = "Patient" })" class="nxl-link">
                                <span class="nxl-micon"><i class="feather-plus-circle"></i></span>
                                <span class="nxl-mtext">New Appointment</span>
                            </a>
                        </li>

                        <li class="nxl-item">
                            <a href="@Url.Action("ActiveAppointments", "Patient", new { area = "Patient" })" class="nxl-link">
                                <span class="nxl-micon"><i class="feather-check-circle"></i></span>
                                <span class="nxl-mtext">Active Appointments</span>
                            </a>
                        </li>

                        <li class="nxl-item">
                            <a href="@Url.Action("PastAppointments", "Patient", new { area = "Patient" })" class="nxl-link">
                                <span class="nxl-micon"><i class="feather-clock"></i></span>
                                <span class="nxl-mtext">Past Appointments</span>
                            </a>
                        </li>

                        <li class="nxl-item">
                            <a href="@Url.Action("CancelledAppointments", "Patient", new { area = "Patient" })" class="nxl-link">
                                <span class="nxl-micon"><i class="feather-x-circle"></i></span>
                                <span class="nxl-mtext">Cancelled Appointments</span>
                            </a>
                        </li>
                    }

                    <!-- Common Menu Items -->
                    <li class="nxl-item nxl-caption">
                        <label>Account</label>
                    </li>

                    <li class="nxl-item">
                        <a href="@Url.Action("Index", "Default", new { area = "" })" class="nxl-link">
                            <span class="nxl-micon"><i class="feather-globe"></i></span>
                            <span class="nxl-mtext">View Website</span>
                        </a>
                    </li>

                    <li class="nxl-item">
                        <a href="@Url.Action("Logout", "Account", new { area = "" })" class="nxl-link">
                            <span class="nxl-micon"><i class="feather-log-out"></i></span>
                            <span class="nxl-mtext">Logout</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="nxl-header">
        <div class="header-wrapper">
            <!-- Header Left -->
            <div class="header-left d-flex align-items-center gap-4">
                <a href="javascript:void(0);" class="nxl-head-mobile-toggler" id="mobile-collapse">
                    <div class="hamburger hamburger--arrowturn">
                        <div class="hamburger-box">
                            <div class="hamburger-inner"></div>
                        </div>
                    </div>
                </a>
                <div class="nxl-navigation-toggle">
                    <a href="javascript:void(0);" id="menu-mini-button">
                        <i class="feather-align-left"></i>
                    </a>
                </div>
                <div class="nxl-lavel-mega-menu-toggle d-flex d-lg-none">
                    <a href="javascript:void(0);" id="nxl-lavel-mega-menu-open">
                        <i class="feather-align-left"></i>
                    </a>
                </div>
            </div>

            <!-- Header Right -->
            <div class="header-right ms-auto">
                <div class="d-flex align-items-center">
                    <!-- Role Badge -->
                    <div class="nxl-h-item d-none d-sm-flex me-3">
                        @if (isDoctor)
                        {
                            <span class="badge bg-primary fs-12 px-3 py-2">
                                <i class="feather-user me-1"></i> Doctor Panel
                            </span>
                        }
                        else if (isPatient)
                        {
                            <span class="badge bg-success fs-12 px-3 py-2">
                                <i class="feather-user me-1"></i> Patient Panel
                            </span>
                        }
                    </div>

                    <!-- Full Screen -->
                    <div class="nxl-h-item d-none d-sm-flex">
                        <div class="full-screen-switcher">
                            <a href="javascript:void(0);" class="nxl-head-link me-0" onclick="$('body').fullScreenHelper('toggle');">
                                <i class="feather-maximize maximize"></i>
                                <i class="feather-minimize minimize"></i>
                            </a>
                        </div>
                    </div>

                    <!-- User Dropdown -->
                    <div class="dropdown nxl-h-item">
                        <a href="javascript:void(0);" data-bs-toggle="dropdown" role="button" data-bs-auto-close="outside">
                            <img src="~/Templates/Duralux-admin-1.0.0/assets/images/avatar/1.png" alt="user-image" class="img-fluid user-avtar me-0">
                        </a>
                        <div class="dropdown-menu dropdown-menu-end nxl-h-dropdown nxl-user-dropdown">
                            <div class="dropdown-header">
                                <div class="d-flex align-items-center">
                                    <img src="~/Templates/Duralux-admin-1.0.0/assets/images/avatar/1.png" alt="user-image" class="img-fluid user-avtar">
                                    <div>
                                        <h6 class="text-dark mb-0">@Session["fullName"]</h6>
                                        <span class="fs-12 fw-medium text-muted">@Session["userRole"]</span>
                                    </div>
                                </div>
                            </div>
                            <a href="@Url.Action("Index", "Default", new { area = "" })" class="dropdown-item">
                                <i class="feather-home"></i>
                                <span>View Website</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="@Url.Action("Logout", "Account", new { area = "" })" class="dropdown-item">
                                <i class="feather-log-out"></i>
                                <span>Logout</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="nxl-container">
        <div class="nxl-content">
            <!-- Page Header -->
            <div class="page-header">
                <div class="page-header-left d-flex align-items-center">
                    <div class="page-header-title">
                        <h5 class="m-b-10">@ViewBag.Title</h5>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                @RenderBody()
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer">
            <p class="fs-11 text-muted fw-medium text-uppercase mb-0 copyright">
                <span>Copyright ï¿½</span>
                <script>document.write(new Date().getFullYear());</script>
            </p>
            <p><span>Medinova Hospital Management System</span></p>
            <div class="d-flex align-items-center gap-4">
                <a href="javascript:void(0);" class="fs-11 fw-semibold text-uppercase">Help</a>
                <a href="javascript:void(0);" class="fs-11 fw-semibold text-uppercase">Privacy</a>
            </div>
        </footer>
    </main>

    <!-- Vendors JS -->
    <script src="~/Templates/Duralux-admin-1.0.0/assets/vendors/js/vendors.min.js"></script>
    <script src="~/Templates/Duralux-admin-1.0.0/assets/vendors/js/daterangepicker.min.js"></script>

    <!-- Apps Init -->
    <script src="~/Templates/Duralux-admin-1.0.0/assets/js/common-init.min.js"></script>

    <!-- Theme Customizer -->
    <script src="~/Templates/Duralux-admin-1.0.0/assets/js/theme-customizer-init.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
